<!-- bottom_sheet_attachment.xml -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:elevation="12dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attach File"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:paddingEnd="24dp"
        android:paddingBottom="12dp"
        android:fontFamily="sans-serif-medium"/>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <!-- Attachments Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Audio -->
        <TextView
            android:id="@+id/attach_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Audio"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:drawableStart="@drawable/ic_audio"
            android:drawablePadding="24dp"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp"
            android:fontFamily="sans-serif"/>

        <!-- Gallery -->
        <TextView
            android:id="@+id/attach_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:drawableStart="@drawable/ic_gallary"
            android:drawablePadding="24dp"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp"
            android:fontFamily="sans-serif"/>

        <!-- Video -->
        <TextView
            android:id="@+id/attach_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:drawableStart="@drawable/ic_video"
            android:drawablePadding="24dp"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp"
            android:fontFamily="sans-serif"/>

        <!-- Document -->
        <TextView
            android:id="@+id/attach_document"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Document"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:drawableStart="@drawable/ic_document"
            android:drawablePadding="24dp"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp"
            android:fontFamily="sans-serif"/>

        <!-- Location -->
        <TextView
            android:id="@+id/attach_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="24dp"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp"
            android:fontFamily="sans-serif"/>

    </LinearLayout>

</LinearLayout>
